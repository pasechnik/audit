{
  "parser"  : "babel-eslint",
  "extends" : [
    "airbnb"
//    "standard",
//    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : true,
    "___INITIAL_STATE__": true,
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
    "jsx-quotes": [2, "prefer-single"],
    "no-confusing-arrow": ["error", {"allowParens": true}],
    // Rule overrides
    "react/jsx-filename-extension": 0, // Allow .react.js file extension
  }
}
